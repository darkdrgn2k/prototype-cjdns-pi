[Unit]
Description=IPFS daemon
Wants=network.target
After=network.target

[Service]
Type=simple
ExecStart=socat udp6-listen:1234,reuseaddr,fork,pktinfo EXEC:/usr/local/sbin/mcast-process-wg.sh
ExecStop=/bin/kill -s QUIT $MAINPID
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
