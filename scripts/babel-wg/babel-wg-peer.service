[Unit]
Description=WireGuard Babeld Service
Wants=network.target
After=network.target

[Service]
Type=simple
ExecStartPre=/usr/local/sbin/babel-wg-init.sh
ExecStart=socat udp6-listen:1234,reuseaddr,fork,pktinfo EXEC:/usr/local/sbin/mcast-process-wg.sh
ExecStop=/bin/kill -s QUIT $MAINPID
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
